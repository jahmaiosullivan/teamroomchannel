@using Teamroom.Web.Views
@model HandleErrorInfo

@{
    ViewBag.Title = "Oops! Something went wrong.";
}

<div>
    <div class="row">
        <div class="col-md-12 page-error">
            <div class=" number">
                500
            </div>
            <div class=" details">
                <h3>Oops! Something went wrong.</h3>
                <p>
                    We are fixing it!<br>
                    Please come back in a while.<br><br>
                </p>
            </div>
        </div>
    </div>

    @if (Model != null && HttpContext.Current.IsDebuggingEnabled)
    {
        <div>
            <div class="row">
                <div class="col-md-1 col-md-offset-1"><b>Exception:</b></div>
                <div class="col-md-8">@Model.Exception.Message</div>
            </div>
            <div class="row">
                <div class="col-md-1 col-md-offset-1"><b>Controller:</b></div>
                <div class="col-md-8">@Model.ControllerName</div>
            </div>
            <div class="row">
                <div class="col-md-1 col-md-offset-1"><b>Action:</b></div>
                <div class="col-md-8">@Model.ActionName</div>
            </div>
            <div class="col-md-9 col-md-offset-1" style="overflow:scroll">
                <pre>
                    @Model.Exception.StackTrace
                </pre>
            </div>
        </div>
    }
</div>